<?xml version="1.0"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">

    <widget class="BroCode\Maps\Block\MapWidget" id="brocode_maps">
        <label translate="true">BroCode MapWidget</label>
        <description>A configurable map widget</description>
        <parameters>
            <parameter name="mapsProviderId" xsi:type="select" visible="true" source_model="BroCode\Maps\Model\Config\Source\MapsProvider">
                <label translate="true">Maps Provider</label>
            </parameter>
            <parameter name="zoom" xsi:type="text" required="true" visible="true" sort_order="10">
                <label>Maps Zoom factor</label>
                <value>13</value>
            </parameter>
            <parameter name="lat" xsi:type="text" required="true" visible="true" sort_order="10">
                <label>Maps Center Latitude</label>
                <value>48.1932404</value>
            </parameter>
            <parameter name="lon" xsi:type="text" required="true" visible="true" sort_order="10">
                <label>Maps Center Longitude</label>
                <value>14.0551743</value>
            </parameter>
        </parameters>
    </widget>

</widgets>
